{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": ["es2018"],
    "target": "es2018",
    "downlevelIteration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "include": [
    "**/*.ts"
  ]
}
