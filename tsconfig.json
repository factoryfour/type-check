{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "downlevelIteration": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "include": [
    "**/*.ts"
  ]
}
